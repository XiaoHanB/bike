.user_icon_view {
  width: 100%;
  height: 40%;
  background-color: #d8d6d3;
  text-align: center;
}

.menu-img {
  width: 60px;
  height: 60px;
  margin: 20% auto;
  border-radius: 30px;
}

.user_setting {
  margin-top: 5%;
  width: 100%;
  height: 40%;
  position: absolute;
}

.item {
  width: 100%;
  height: 30px;
  margin-left: 5%;
  margin-right: 8rpx;
  margin-top: 8rpx;
  background-color: #fff;
  position: relative;
}

.item-left {
  float: left;
  position: absolute;
  top: 5px;
}

.item-left >.image {
  width: 22.5px;
  height: 22.5px;
}

.line {
  height: 2rpx;
  width: 100%;
  background-color: #e0e1e2;
}

.title {
  float: left;
  margin-top: 4px;
  width: 78%;
  margin-left: 10%;
  font-size: 15px;
  font-family: "微软雅黑";
}

.item_right {
  float: left;
  margin-right: 2%;
}

.item_right>.image {
  margin-top: 6px;
  width: 35rpx;
  height: 35rpx;
}
.line_fff{
    height: 10px;
    background-color: #d8d6d3;
}
